<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFCCCC" />
    <size
        android:width="100dp"
        android:height="100dp" />

    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <!-- Add a border -->
    <stroke
        android:width="1dp"
        android:color="#FF6666" />

    <!-- Optional inner elements like a centered image icon -->
    <gradient
        android:angle="90"
        android:endColor="#FFCCCC"
        android:startColor="#FFAAAA"
        android:type="linear" />
</shape>